<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <node pkg="turtlesim" exec="turtlesim_node" name="sim" namespace="turtlesim1" />
  <node pkg="turtlesim" exec="turtlesim_node" name="sim" namespace="turtlesim2" />
  <node pkg="turtlesim" exec="turtlesim_node" name="sim" namespace="turtlesim3" />
  <node pkg="turtlesim" exec="mimic" name="mimic1to2">
    <remap from="/input/pose" to="/turtlesim1/turtle1/pose" />
    <remap from="/output/cmd_vel" to="/turtlesim2/turtle1/cmd_vel" />
  </node>
  <node pkg="turtlesim" exec="mimic" name="mimic2to3">
    <remap from="/input/pose" to="/turtlesim2/turtle1/pose" />
    <remap from="/output/cmd_vel" to="/turtlesim3/turtle1/cmd_vel" />
  </node>
</launch>
