from launch import LaunchDescription
from launch_ros.actions import Node
from ament_index_python.packages import get_package_share_directory
from pathlib import Path

def generate_launch_description():
    pkg_share = get_package_share_directory('md05ex01')
    urdf_path = Path(pkg_share) / 'robot.urdf'

    # read URDF text into parameter for robot_state_publisher
    robot_description = {'robot_description': urdf_path.read_text()}

    rsp = Node(
        package='robot_state_publisher',
        executable='robot_state_publisher',
        output='screen',
        parameters=[robot_description]
    )

    jsp_gui = Node(
        package='joint_state_publisher_gui',
        executable='joint_state_publisher_gui',
        output='screen'
    )

    rviz = Node(
        package='rviz2',
        executable='rviz2',
        output='screen',
        # arguments=['-d', str(Path(pkg_share)/'robot.rviz')]  # optional rviz config
    )

    return LaunchDescription([
        rsp,
        jsp_gui,
        rviz,
    ])
